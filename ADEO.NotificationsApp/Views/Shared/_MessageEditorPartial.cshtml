<div>
    <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog"
         aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content" >
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Create New Message</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    </button>
                </div>
                <div class="modal-body" id="divPopupContent">
                    <form class="">
                        <div class="position-relative mb-3">
                            <label for="exampleEmail" class="form-label">Date:</label>
                            <div class="input-group">
                                <div id="dv" class="input-group-text datepicker-trigger">
                                    <i class="fa fa-calendar-alt"></i>
                                </div>
                                <input id="msgDate" type="datetime" class="form-control" data-toggle="datepicker-icon">
                            </div>
                        </div>
                        <div class="position-relative mb-3">
                            <label for="examplePassword" class="form-label">Message or Text:</label>
                            <div>
                                <div class="main-container">
                                    <div class="editor-container editor-container_classic-editor" id="editor-container">
                                        <div class="editor-container__editor">
                                            <div id="editor">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <script type="importmap">
                                    {
                                        "imports": {
                                            "ckeditor5": "https://cdn.ckeditor.com/ckeditor5/43.0.0/ckeditor5.js",
                                            "ckeditor5/": "https://cdn.ckeditor.com/ckeditor5/43.0.0/"
                                        }
                                    }
                                </script>
                                <script type="module" src="~/lib/ckeditor5/main.js"></script>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btnMessageClose" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" id="btnSubmit" class="btn btn-primary">Save changes</button>
                    <button type="button" id="btnSentScreen" class="btn btn-success">Send to screen</button>
                </div>
            </div>
        </div>
    </div>
</div>

