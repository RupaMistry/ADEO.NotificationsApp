@model NotificationsModel

<div id="htmlContainer" class="tab-content"> 
    <div class="tab-pane tabs-animation fade show active" id="tab-content-0" role="tabpanel">
        <div class="row">
            <div class="">
                <div class="main-card mb-3 card">
                    <div class="card-header">
                        <i class="header-icon lnr-license icon-gradient bg-plum-plate"></i>
                        All Notification Messages
                    </div>
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="tab-pane active" id="tab-eg1-0" role="tabpanel">
                                @{
                                    await Html.RenderPartialAsync("_UserMessagesPartial", Model.UserMessages);
                                }
                            </div>
                        </div>
                    </div>
                    <div class="d-block text-end card-footer"> 
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="tab-pane tabs-animation fade" id="tab-content-1" role="tabpanel">
        <div class="row">
            <div class="">
                <div class="main-card mb-3 card">
                    <div class="card-header">
                        <i class="header-icon lnr-license icon-gradient bg-plum-plate"></i>
                        All Notification Messages
                    </div>
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="tab-pane active" id="tab-eg1-1" role="tabpanel">
                                @{
                                    await Html.RenderPartialAsync("_UserHistoryPartial", Model.MessageHistory);
                                }
                            </div>
                        </div>
                    </div>
                    <div class="d-block text-end card-footer">
                    </div>
                </div>
            </div> 
        </div>
    </div>
</div>